{{> tabs add='active'}}
<div class="tab-content px-0 py-3 border border-top-0 bg-white rounded-bottom shadow" id="tab-content">
    <div class="tab-pane fade show active p-4" role="tabpanel" aria-labelledby="add-tab"
        id="add-pane">
        <form class="form" id="item-form">
            <input type="hidden" name="id" value="{{item.id}}">
            <div class="mb-3">
                <label for="description">Description</label>
                <input name="description" id="description" class="form-control" type="text" placeholder="Describe your task"
                    required value="{{item.description}}">
            </div>
            <div class="mb-3">
                <label for="tags">Tags</label>
                <input id="tags" class="form-control" type="text" name="tags"
                    placeholder="tag1, tag2, tag3" value="{{item.tags}}">
            </div>
            <div class="mb-3">
                <label for="date">Deadline</label>
                <input id="deadline" class="form-control" type="date" name="deadline" value="{{fillDate item.deadline}}">
            </div>
        </form>
        <div class="d-flex justify-content-end mt-3">
            {{#if edit}}
                <button class="btn btn-danger me-2" type="submit" form="item-form" value="submit" formAction="/remove/{{item.id}}" formmethod="post">Delete</button>
                <button class="btn btn-secondary" type="submit" form="item-form" value="submit" formAction="/edit" formmethod="post">Save</button>
            {{else}}
                <button class="btn btn-secondary" type="submit" form="item-form" value="submit" formAction="/add" formmethod="post">Save</button>
            {{/if}}
        </div>
    </div>
</div>